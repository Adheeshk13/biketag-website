<!DOCTYPE HTML>
<html lang="en">

<head>
	{% include "page/gtm" %}
	{% include "page/meta" %}
	{% include "page/css" %}
	
	<!-- MDB -->
	{{ "/css/mdb.min.css" | stylesheet_tag }}
	{{ images | json | console_log: nonce }}
</head>
<body>

	
	<div class="container my-5">

		<!--Carousel Wrapper-->
	<div id="carousel-with-lb" class="carousel slide carousel-multi-item" data-ride="carousel">
	{% assign imagesPerSlide = 6 %}
	{% assign numSlides = images.length | divided_by:imagesPerSlide %}

		<!--Controls-->
		<div class="controls-top">
		<a class="btn-floating btn-secondary" href="#carousel-with-lb" data-slide="prev"><i
			class="fas fa-chevron-left"></i></a>
		<a class="btn-floating btn-secondary" href="#carousel-with-lb" data-slide="next"><i
			class="fas fa-chevron-right"></i></a>
		</div>
		<!--/.Controls-->

		<!--Indicators-->
		<ol class="carousel-indicators">
			{% for slideNum in (1..numSlides) %}
			<li data-target="#carousel-with-lb" data-slide-to="{{ slideNum }}" class="secondary-color"></li>
			{% endfor %}
		</ol>
		<!--/.Indicators-->

		<!--Slides and lightbox-->

		<div class="carousel-inner mdb-lightbox" role="listbox">
			<div id="mdb-lightbox-ui"></div>
				{% for slideNum in (1..numSlides) %}
				{% assign count = 1 %}
				<div class="carousel-item text-center">
					{% assign imagesOffest = slideNum | times:imagesPerSlide %}
					{% for image in images offset: imagesOffest limit: imagesPerSlide %}
					{% assign evenOrOdd = count | modulo:2 %}
					{% if evenOrOdd == 1 %}
					<div class="row">
					{% endif %}
						<figure class="col-md-4">
							<div class="view rounded z-depth-1-half">
								<img src="{{ image.link }}" class="img-fluid rounded" alt="{{ image.description }}" class="img-fluid">
							</div>
							<caption>{{ image.description }}</caption>
						</figure>
					{% if evenOrOdd == 0 %}
					</div>
					{% endif %}
					{% assign count = count | plus:1 %}
					{% endfor %}
				</div>
				{% endfor %}
			</div>
	<!--/.Slides-->
  
  </div>
  <!--/.Carousel Wrapper-->
	
	</div>
	{{ "/js/jquery.min.js" | javascript_tag }}
	<!-- MDB -->
	{{ "/js/mdb.min.js" | javascript_tag }}

	<script type="text/javascript" nonce="{{nonce}}">
	(($) => {
		$('.carousel.carousel-multi-item .carousel-item').first().addClass('active')
		// $('.carousel-indicators li').first().addClass('active')
	})(jQuery)
	</script>
</body>
</html>
