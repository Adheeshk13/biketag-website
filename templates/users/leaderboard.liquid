<!DOCTYPE html>
<html lang="en">
	<head>
		{% include "page/gtm" %}
		{% include "page/meta" %}
		{% include "page/css" %}
		
		<!-- MDB -->
		{{ "/css/mdb.min.css" | stylesheet_tag }}
		{{ "/css/fa-all.min.css" | stylesheet_tag }}
		{{ images | json | console_log: nonce }}
	</head>

	<body>
		<h1>BikeTag Player Leaderboard [{{ region }}]</h1>

		<section>
			<ul class="list-group">
			{% for username in usernames %}
				<li>
					<a href="/user/?username={{ username }}">{{ username }}</a>
					<span>({{ images[username].length }})</span>
				</li>
			{% endfor %}
			</ul>
		</section>

		{{ "/js/jquery.min.js" | javascript_tag }}
		<!-- MDB -->
		{{ "/js/mdb.min.js" | javascript_tag }}
	</body>
</html>
